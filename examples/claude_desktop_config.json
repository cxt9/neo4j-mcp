{
  "mcpServers": {
    "neo4j-mcp": {
      "command": "neo4j-mcp-server",
      "args": ["--transport", "stdio"],
      "env": {
        "NEO4J_HOST": "localhost",
        "NEO4J_PORT": "7687",
        "NEO4J_HTTP_PORT": "7474",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "your-password-here",
        "NEO4J_DATABASE": "neo4j",
        "NEO4J_URI_SCHEME": "bolt",
        "NEO4J_ENCRYPTED": "false"
      }
    }
  },
  "globalSettings": {
    "logging": {
      "level": "info"
    }
  }
} 